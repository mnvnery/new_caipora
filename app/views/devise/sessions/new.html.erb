<main class="px-5">
<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs w-25 pt-2">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
        <div class='confirm-btn pt-2'>
        <%= image_tag 'mountain-dark-blue.svg', class: "reserve-img" %>
        <h4><%= f.button :submit, "LOG IN", class: "reserve-text mt-1" %></h4>
      </div>
  </div>
<% end %>

<div class="pt-3"><%= render "devise/shared/links" %></div>
</main>