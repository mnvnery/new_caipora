            <img class="locations" src="/assets/amazonia.webp" alt="amazonia">
            
        </div>
    </div>
    <canvas id='canvas' width=1920 height=800 style='position: absolute; top:0; left: 0'></canvas>
</div>

<script>
var canvas = document.getElementById('canvas');
var ctx = canvas.getContext('2d'),
    brush = new Image();

    brush.src = 'assets/brush.png'

//prepare canvas
ctx.fillStyle = '#F9E9D1'
ctx.fillRect(0, 0, 1920, 800);

//prepare a 30% opacity eraser
ctx.globalCompositeOperation = 'destination-out';

// make random strokes around cursor while mouse moves
canvas.onmousemove = function(e) {
    var rect = this.getBoundingClientRect();
    var r = this.getBoundingClientRect(),
    x = e.clientX - r.left,
    y = e.clientY - r.top;

    ctx.globalCompositeOperation = 'destination-out';
    ctx.drawImage(brush, x, y);
    

}

</script>